(function() {
    'use strict';

    // 添加CSS模型
    // add CSS fuction
    GM_addStyle(`
        /* main page */
        div.buttonImage {
            box-shadow: 0 0 20px 10px #00ffd0, 0 0 30px 15px #00ffd0, rgba(0, 0, 255, 0.1);
        }
        .main-menu-username {
            color: #00ffd0;
